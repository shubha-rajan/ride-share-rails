<h2>BIG LIST OF DRIVERS</h2>
<%=link_to "CREATE NEW DRIVER", new_driver_path%>
    <ul class= "big-list">
    <li class="table-header">
    <span>IMAGE:</span>
    <span>NAME:</span>
    <span>AVERAGE RATING:</span>
    </li>
    <% @drivers.each do |driver|%>
        <li>
        <%= image_tag 'http://lorempixel.com/100/100/animals/6/', alt: driver.name, class: "thumbnail"  %>
            <%= link_to driver.name, driver_path(driver.id)%>
            <span><%= driver.average_rating%></span>
            <%= link_to "Edit", edit_driver_path(driver.id)%>
            <%= link_to "Delete",  driver_path(driver.id), method: :delete, data: {confirm: "Are you sure you want to delete this driver?"}%>
        </li>
    <%end%>
    </ul>
