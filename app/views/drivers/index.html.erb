<h2>All drivers:</h2>
<%=link_to "Add a driver", new_driver_path%>
    <ul>
    <% @drivers.each do |driver|%>
        <li>
            <p>NAME: <%= link_to driver.name, driver_path(driver.id)%></p>
            <p>AVERAGE RATING: <%= driver.average_rating%></p>
            <%= link_to "Edit", edit_driver_path(driver.id)%>
            <%= link_to "Delete",  driver_path(driver.id), method: :delete, data: {confirm: "Are you sure you want to delete this driver?"}%>
        </li>
    <%end%>
    </ul>
