<h2>BIG LIST OF PASSENGERS</h2>
<%= link_to "CREATE NEW PASSENGER", new_passenger_path %>
<ul class= "big-list">
    <li>
        <span>IMAGE:</span>
        <span>NAME:</span>
        <span>PHONE NUMBER:</span>
    </li>
<%@passengers.each do |passenger| %>
    <li>
        <%= image_tag 'http://placekitten.com/100/100', alt: passenger.name, class: "thumbnail"  %>
        <%=link_to passenger.name, passenger_path(passenger.id)%>
        <span><%= passenger.phone_num%></span>
        <%= link_to "Edit", edit_passenger_path(passenger.id)%>
        <%= link_to "Delete",  passenger_path(passenger.id), method: :delete, data: {confirm: "Are you sure you want to delete this passenger?"}%>
    </li>
<%end%>
</ul>